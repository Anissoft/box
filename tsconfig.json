{
  "allowJS": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "jsx": "react",
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": ".",
    "outDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
